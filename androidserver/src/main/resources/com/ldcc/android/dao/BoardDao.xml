<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ldcc.android.dao.BoardDao">

	<!-- 글 결과 매핑(댓글용) -->
	<resultMap type="BoardVo" id="BoardVoResultMap">
		<result property="bidx" column="bidx" />
		<result property="mid" column="mid" />
		<result property="bdate" column="bdate" />
		<result property="btitle" column="btitle" />
		<result property="bcontent" column="bcontent" />
		<result property="recommend" column="recommend" />
		<result property="bhits" column="bhits" />
		<collection property="comments" select="com.ldcc.android.dao.CommentDao.selectAllByBidx"
			column="bidx" ofType="Comment"></collection>
	</resultMap>
	
	<!-- 글 결과 매핑(회원정보용) -->
	<resultMap type="BoardVo" id="BoardVoResultMap2">
		<result property="bidx" column="bidx" />
		<result property="mid" column="mid" />
		<result property="bdate" column="bdate" />
		<result property="btitle" column="btitle" />
		<result property="bcontent" column="bcontent" />
		<result property="recommend" column="recommend" />
		<result property="bhits" column="bhits" />
		<collection property="onemember" select="com.ldcc.android.dao.MemberDao.selectOne"
			column="mid" ofType="MemberVo"></collection>
	</resultMap>

	<!-- 글 추가 -->
	<insert id="insert" parameterType="BoardVo">
		INSERT
		INTO board
		(mid
		,bdate
		,btitle
		,bcontent
		,recommend
		,bhits)
		VALUES
		(#{mid}
		,#{bdate}
		,#{btitle}
		,#{bcontent}
		,#{recommend}
		,#{bhits});
	</insert>

	<!-- 글 전체 가져오기 -->
	<select id="selectAll" resultMap="BoardVoResultMap2">
		SELECT *
		FROM board
	</select>

	<!-- 글 갯수 가져오기 -->
	<select id="countAll" resultType="Integer">
		SELECT COUNT(*)
		FROM board
	</select>

	<!-- 글 번호를 통해 하나만 가져오기 -->
	<select id="selectOne" parameterType="Integer" resultMap="BoardVoResultMap">
		SELECT *
		FROM board
		WHERE bidx = #{bidx};
	</select>

	<!-- 글 삭제 -->
	<delete id="delete" parameterType="Integer">
		DELETE
		FROM board
		WHERE bidx =
		#{bidx};
	</delete>

	<!-- 글 수정 -->
	<update id="update" parameterType="BoardVo">
		UPDATE board
		SET
		btitle =
		#{btitle},
		bcontent = #{bcontent},
		recommend = #{recommend},
		bhits =
		#{bhits}
		WHERE bidx = #{bidx};
	</update>

</mapper>